<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="105dp"
            android:layout_height="43dp"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Bar Code"
                android:layout_marginLeft="60dp"
                android:inputType="textPersonName"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@android:drawable/ic_menu_send" />
        </LinearLayout>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:text="Scan Item"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="207dp"
            app:srcCompat="@drawable/yogurt" />



        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:ems="10"
            android:hint="Beemster Cheese"
            android:inputType="textPersonName"
            android:textSize="15sp"
             />
        <!-- RelativeLayout places the components vertically one by one.
     Necessary parameters also specified so that elegant output can be seen -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp"
            tools:context=".MainActivity">

            <!-- Dropdown number 1-->
            <Spinner
                android:id="@+id/sp_min"
                android:layout_width="0dp"
                android:layout_height="61dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:textAlignment="textStart"
                tools:listitem="@layout/item_dropdwon" />

            <!-- Drop down number 2-->
            <Spinner
                android:id="@+id/sp_max"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                tools:listitem="@layout/item_dropdwon" />
            <!-- tools:listitem="@layout/item_dropdown" /> 1-->

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp"
            tools:context=".MainActivity">

            <!-- Dropdown number 3-->
            <Spinner
                android:id="@+id/sp_min1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                tools:listitem="@layout/item_dropdwon"
                 />

            <!-- Drop down number 4-->
            <Spinner
                android:id="@+id/sp_max1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                tools:listitem="@layout/item_dropdwon"
                 />


        </LinearLayout>

        <Button
            android:id="@+id/save"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="120dp"
            android:text="save" />




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>